/*全部属性的主盒子*/  
 .commodity_attr_list {  
  background: #fff;  
  padding: 15rpx;  
  font-size: 26rpx;  
  overflow: hidden;  
  width: 100%; 
  z-index: 10; 
}   
/*每组属性的主盒子*/  
.attr_box {  
  width: 100%;  
  overflow: hidden;  
  border-bottom: 1rpx solid #ececec;  
  margin-left: -25rpx;
  padding:5rpx 0;
  margin-top:32px;
background:#fff;
position:fixed;


}  
/*属性名*/  
.attr_name {  
  width: 20%;  
  float: left;  
  padding: 15rpx 0;  
}  
/*属性值*/  
.attr_value_box {    
  float: left;  
  padding: 11rpx 0;  
  overflow: hidden; 
  width: 25%; 
}  
.attr_box .active .attr_value{
  border: 1rpx solid #C9121E;
  color:#C9121E;
}
/*每个属性值*/  
.attr_value { 
  width:70%;
  float:left;
  padding:8rpx;
  margin:6rpx 20rpx;
  border:1rpx solid gray;
  border-radius:6rpx;
  text-align:center;
}  
.attr_value.attr:active{
  color: red;
}
/*每个属性选中的当前样式*/  
.attr_value_active {  
  background: #FFCC00;  
  border-radius: 10rpx;  
  color: #fff;  
  padding: 0 10rpx;  
}  
/*禁用属性*/  
.attr_value_disabled {  
  color: #ccc;  
}  

/* 提示  */
.empty-tip{
  padding:50rpx 0;
  text-align:center;
  font-size:.8em;
  line-height:2em;
  color:gray;

}
/*button*/  
